<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= shop.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= shop.title%>
                    </h5>
                    <p class="card-text">
                        <%= shop.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-secondary">
                        <%= shop.location%>
                    </li>
                    <li class="list-group-item">$<%= shop.price%> Avg. (Regular Size, No Toppings)</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/shops/<%=shop._id%>/edit">Edit</a>
                    <form class="d-inline" action="/shops/<%=shop._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
    </div>
