<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Boba Shop</h1>
        <div class="col-6 offset-3">
            <form action="/shops" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="shop[title]" id="title" required>
                    <div class="valid-feedback">
                        Valid!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="shop[location]" id="location" required>
                    <div class="valid-feedback">
                        Valid!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="shop[image]" id="image" required>
                    <div class="valid-feedback">
                        Valid!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="shop[price]" required>
                        <div class="valid-feedback">
                            Valid!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="shop[description]" id="description"
                        required></textarea>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="mb-3"><button class="btn btn-success">Add Boba Shop</button></div>
            </form>
            <a href="/shops">All Shops</a>
        </div>
    </div>